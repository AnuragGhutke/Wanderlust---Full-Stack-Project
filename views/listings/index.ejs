<% layout('/layouts/boilerplate') -%>

    <!-- icons -->
    <!-- 1 -->
    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire-flame-curved"></i></i></div>
            <p>Trending</p>
        </div>


        <!-- 2 -->
        <div class="filter">
            <div><i class="fa-solid fa-wheat-awn"></i></div>
            <p>Farms</p>
        </div>


        <!-- 3 -->
        <div class="filter">
            <div><i class="fa-solid fa-hotel"></i></div>
            <p>Rooms</p>
        </div>

        <!-- 4 -->
        <div class="filter">
            <div><i class="fa-solid fa-city"></i></div>
            <p>Iconic cities</p>
        </div>

        <!-- 5 -->
        <div class="filter">
            <div><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beach</p>
        </div>

        <!-- 6 -->
        <div class="filter">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Amazing views</p>
        </div>

        <!-- 7 -->
        <div class="filter">
            <div><i class="fa-solid fa-house-laptop"></i></div>
            <p>Cabins</p>
        </div>

        <!-- 8 -->
        <div class="filter">
            <div><i class="fa-solid fa-water-ladder"></i></div>
            <p>Amazing pools</p>
        </div>

        <!-- 9 -->
        <div class="filter">
            <div><i class="fa-solid fa-gamepad"></i></div>
            <p>Gaming house</p>
        </div>

        <!-- 10 -->
        <div class="filter">
            <div><i class="fa-solid fa-place-of-worship"></i></div>
            <p>Place of worship</p>
        </div>


        <!-- 11 -->
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Mountain city</p>
        </div>


        <!-- 12 -->
        <div class="filter">
            <div><i class="fa-regular fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>

        <!-- tax toggle -->
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display taxes</label>
            </div>
        </div>

    </div>




    <!-- all listing cards -->
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1">

        <% for(let listing of allListings) { %>

            <!-- card info -->
            <a href="/listings/<%= listing._id%> " class="listing-link">

                <div class="card">

                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_img" style="height:20rem;">

                    <!-- card hover effect -->
                    <div class="card-img-overlay"></div>

                    <div class="card-body">

                        <!-- card text -->
                        <p class="card-text">
                            <b>
                                <%= listing.title %>
                            </b><br>

                            &#8377;<%= listing.price ? listing.price.toLocaleString('en-IN') : 'N/A' %> /night
                                <i class="tax-info">&nbsp;&nbsp; +18% GST</i>

                    </div>
                </div>
            </a>
            <%}%>
    </div>