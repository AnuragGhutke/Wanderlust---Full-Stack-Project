<% layout('/layouts/boilerplate') -%>

    <body>
        <div class="row mt-3">
            <h3 class="offset-2">Create your listing</h3>

            <div class="col-8 offset-2">

                <!-- form -->
                <form method="post" action="/listings" class="needs-validation" novalidate
                    enctype="multipart/form-data">

                    <!-- title -->
                    <div class="mb-3"> <label for="title" class="form-label">Title</label>
                        <input placeholder="add a catchy title" name="listing[title]" class="form-control" type="text"
                            required>
                        <div class="invalid-feedback">please enter a valid title</div>
                    </div>

                    <!-- description -->
                    <div class="mb-3"> <label for="description" class="form-label">Description</label>
                        <textarea placeholder="enter description........" name="listing[description]"
                            class="form-control" required></textarea>
                        <div class="invalid-feedback">please give some description</div>
                    </div>

                    <!-- upload img from files -->
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Image</label>
                        <input type="file" name="image" class="form-control" required>
                        <div class="invalid-feedback">please upload an image</div>
                    </div>


                    <!-- price -->
                    <div class="row">
                        <div class="mb-3 col-md-4"> <label for="price" class="form-label">Price</label>
                            <input placeholder="1200" name="listing[price]" type="text" class="form-control" required>
                            <div class="invalid-feedback">please enter a valid price</div>
                        </div>

                        <!-- country -->
                        <div class="mb-3 col-md-8"> <label for="country" class="form-label">Country</label>
                            <input placeholder="India" name="listing[country]" type="text" class="form-control"
                                required>
                            <div class="invalid-feedback">please enter a valid country</div>
                        </div>

                    </div>

                    <!-- location -->
                    <div class="mb-3"> <label for="location" class="form-label">Location</label>
                        <input placeholder="Nagpur/Maharashtra" name="listing[location]" type="text"
                            class="form-control" required>
                        <div class="invalid-feedback">please enter a valid location</div>
                    </div>



                    <button class="btn add-btn mt-3">Add Listing</button><br><br><br>

                </form>
            </div>
        </div>

    </body>